@page
@model LoginVerifyPasswordModel

@{
    ViewData["Title"] = "Verify Password";
}
@{
    // Retrieve the message and message type directly, if necessary
    var message = TempData["Message"] as string;
    var messageType = TempData["MessageType"] as string;
}

<link rel="stylesheet" href="~/css/loginstyle.css" asp-append-version="true" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />

<!-- Toastr CSS in <head> -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" rel="stylesheet" />

<div class="container">
    <input type="checkbox" id="flip">
    <div class="cover">
        <div class="front">
            <img src="~/images/frontImg.jpg" alt="">
            <div class="text">
                <span class="text-1">&nbsp;</span>
                <span class="text-1">&nbsp;</span>
                @* <span class="text-1">Smart Living, Simplified: <br> Your Apartment, Your Way!</span> *@
            </div>
        </div>
        <div class="back">
            <img class="backImg" src="~/images/backImg.jpg" alt="">
            <div class="text">
                <span class="text-1">Complete miles of journey <br> with one step</span>
                <span class="text-2">Let's get started</span>
            </div>
        </div>
    </div>
    <div class="forms">
        <div class="form-content">
            <div class="login-form">
                <div class="title">@ViewData["Title"]</div>
                <div>&nbsp;</div>
                <form method="post">
                    <div class="form-group row">
                        <div class="col-md-12">
                            <label for="PassKey">Please type your password for varification</label>
                        </div>

                        <div class="input-boxes">
                            <div class="input-box">
                                <i class="fas fa-lock"></i>
                                <input id="PassKey" name="PassKey" type="password" placeholder="Enter your password" aria-describedby="PassKey" required />
                                <!-- Eye icon to toggle password visibility -->
                                <span id="togglePassword" class="eye-icon">
                                    <i class="fas fa-eye-slash"></i>  <!-- Default icon (eye off) -->
                                </span>
                            </div>

                            <div class="button input-box">
                                <input type="submit" value="Next >">
                            </div>

                        </div>

                    </div>
                </form>
            </div>

        </div>
    </div>
</div>

@section Scripts {

    <!-- Add this CSS to move the eye icon slightly to the left -->
    <style>
        .input-box {
            position: relative;
            display: flex;
            align-items: center;
        }

        #PassKey {
            padding-right: 30px; /* Space for the eye icon */
        }

        .eye-icon {
            position: absolute;
            right: 30px; /* Position the eye icon to the right */
            top: 32%;
            transform: translateY(-50%); /* Center vertically */
            cursor: pointer;
            font-size: 20px;
        }
    </style>

    <script>
        document.getElementById('togglePassword').addEventListener('click', function (e) {
            var passwordField = document.getElementById('PassKey');
            var eyeIcon = e.target;

            // Toggle password visibility
            if (passwordField.type === "password") {
                passwordField.type = "text";  // Show password
                eyeIcon.classList.remove("fa-eye-slash"); // Remove eye-slash icon
                eyeIcon.classList.add("fa-eye"); // Add eye icon
            } else {
                passwordField.type = "password"; // Hide password
                eyeIcon.classList.remove("fa-eye"); // Remove eye icon
                eyeIcon.classList.add("fa-eye-slash"); // Add eye-slash icon
            }
        });
    </script>

    <!-- Include Toastr JS at the end of your page, just before the closing </body> tag -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>

    <!-- Now you can configure Toastr and use it -->
    @if (!string.IsNullOrEmpty(message))
    {
        <script type="text/javascript">
            if (typeof toastr !== 'undefined') {
            @if (messageType == "Success")
            {
                <text>toastr.success('@message'); </text>
            }
            else if (messageType == "Error")
            {
                <text>toastr.error('@message'); </text>
            }
            else if (messageType == "Info")
            {
                <text>toastr.info('@message'); </text>
            }
            else if (messageType == "Warning")
            {
                <text>toastr.warning('@message'); </text>
            }
            else
            {
                <text>toastr.info('@message'); </text>  <!-- Default to Info -->
            }
                                                                                                                                                                                                                                }
            else {
                console.error('Toastr library is not loaded!');
            }
        </script>
    }

}
